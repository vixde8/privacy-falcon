{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "Detection",
  "type": "object",
  "required": [
    "tracker_id",
    "severity",
    "confidence",
    "confidence_score",
    "signals"
  ],
  "additionalProperties": false,
  "properties": {
    "tracker_id": { "type": "string", "minLength": 1 },
    "severity": { "enum": ["low", "medium", "high", "critical"] },
    "confidence": { "enum": ["low", "medium", "high"] },
    "confidence_score": { "type": "number", "minimum": 0, "maximum": 1 },
    "signals": {
      "type": "array",
      "minItems": 1,
      "items": {
        "enum": ["network", "script", "storage", "iframe", "behavior"]
      }
    }
  }
}
